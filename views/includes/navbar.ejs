<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }
  .btn-search:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }
</style>

<nav id="mainNavbar" class="navbar navbar-expand-md fixed-top bg-transparent">
  <div class="container">
    <a class="navbar-brand small-logo-container" href="#">
      <span class="small-logo text-white fs-3 mt-2">Campus Cart</span>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarCollapse"
      aria-controls="navbarCollapse"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarCollapse">
      <form class="d-flex ms-auto" action="/listings/search" method="GET">
          <input name="search" class="form-control me-2" type="search" placeholder="Search an item" aria-label="Search">
          <button class="btn btn-search" type="submit" style="background-color: #6351ce;"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
      </form>  
      <ul class="navbar-nav ms-auto">
        <li class="nav-item me-3"><a class="nav-link text-dark" href="/listings/new"><b>Sell your Product</b></a></li>
        <% if(!currUser) { %>
          <li class="nav-item" ><a class="nav-link text-dark" href="/signup"><b>SignUp</b></a></li>
          <li class="nav-item"><a class="nav-link text-dark" href="/login"><b>Login</b></a></li>
          <% } %> <% if(currUser) { %>
          <li class="nav-item me-3" ><a class="nav-link text-dark" href="/cart"><b>Cart</b></a></li>
          <li class="nav-item" ><a class="nav-link text-dark" href="/logout"><b>Logout</b></a></li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<!-- Big Logo Section -->
<div class="big-logo-row d-flex align-items-center justify-content-center text-center" style="background-color: #f8f9fa;">
  <div class="container">
    <div class="row align-items-center" style="height: 100vh;">
      <!-- Left Side -->
      <div class="col-md-6 text-start">
        <h1 class="display-1 fw-bold text-dark" style="font-size: 8rem;">Campus</h1>
        <h1 class="display-1 fw-bold text-primary " style="font-size: 6rem;">Cart</h1>
        <button class="btn btn-dark btn-lg mt-5 ms-3"><a href="/listings/new" style="text-decoration: none; color: white;">Sell your Product</a></button>
      </div>

      <!-- Right Side -->
      <div class="col-md-6 text-end">
        <form class="d-flex justify-content-end" role="search" action="/listings/search" method="GET">
          <input
            class="form-control form-control-lg w-75 me-2"
            type="search"
            placeholder="Search for products..."
            aria-label="Search"
            name="search"
          />
          <button class="btn btn-primary btn-lg" style="background-color: #6351ce;" type="submit" role="search">Search</button>
        </form>
      </div>
    </div>
  </div>
</div>
