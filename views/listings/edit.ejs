<% layout("/layouts/boilerplate2") -%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Edit your Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label form="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Awesome Title!</div>
        </div>

        <div class="mb-3">
          <label form="description" class="form-label">Description</label>
          <textarea name="listing[description]" class="form-control" required>
<%= listing.description %></textarea
          >
          <div class="invalid-feedback">
            Please enter description under 50 words
          </div>
        </div>

        <div class="mb-3">
          <p>Original Image</p>
          <img src="<%= originalImageUrl %>" />
        </div>

        <div class="mb-3">
          <label form="image" class="form-label">Upload New Image</label>
          <input name="listing[image]" type="file" class="form-control" />
        </div>

        <div class="row">
          <div class="mb-3 col-md-8">
            <label form="hostel" class="form-label">Hostel</label>
            <input
              name="listing[hostel]"
              value="<%= listing.hostel %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the hostel name!</div>
          </div>

          <div class="mb-3">
            <label form="roomNumber" class="form-label">Room Number</label>
            <input
              name="listing[roomNumber]"
              value="<%= listing.roomNumber %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">
              Please enter the roomNumber name!
            </div>
          </div>
        </div>

        <div class="mb-3">
          <label form="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price!</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3 mb-3">Add</button>
      </form>
    </div>
  </div>
</body>
